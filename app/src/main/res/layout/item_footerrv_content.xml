<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:orientation="vertical">    <LinearLayout        android:layout_width="220dp"        android:layout_height="220dp"        android:layout_margin="8dp"        android:orientation="vertical">        <TextView            android:id="@+id/book_name"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@drawable/background_button_fill_primary"            android:fontFamily="@font/bold"            android:includeFontPadding="false"            android:lineSpacingExtra="5dp"            android:lineSpacingMultiplier="1.2"            android:paddingStart="20dp"            android:paddingTop="10dp"            android:paddingEnd="20dp"            android:paddingBottom="10dp"            android:text="Book Name"            android:textColor="@color/colorWhite"            />    </LinearLayout></RelativeLayout>