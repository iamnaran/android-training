<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/container"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:clipToPadding="false"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:paddingStart="10dp"        android:paddingEnd="10dp">        <TextView            android:id="@+id/featured_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentStart="true"            android:layout_centerVertical="true"            android:fontFamily="@font/bold"            android:paddingStart="5dp"            android:paddingTop="8dp"            android:paddingEnd="5dp"            android:paddingBottom="3dp"            android:text="Category List"            android:textColor="@color/colorAppBlue"            android:textSize="18sp" />        <View            android:layout_width="40dp"            android:layout_height="3dp"            android:layout_below="@+id/featured_title"            android:layout_marginStart="5dp"            android:background="#000"            android:layout_marginTop="10dp"            android:paddingBottom="5dp" />        <TextView            android:id="@+id/tv_featured_view_all"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentEnd="true"            android:layout_centerVertical="true"            android:layout_marginEnd="5dp"            android:fontFamily="@font/normal"            android:gravity="center"            android:text="@string/label_see_all"            android:textColor="@color/colorDefault"            android:textSize="12sp" />    </RelativeLayout>    <LinearLayout        android:id="@+id/recycler_view_container"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <androidx.recyclerview.widget.RecyclerView            android:id="@+id/inner_recycler_view"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:clipToPadding="false"            android:paddingStart="8dp"            android:paddingTop="10dp"            android:paddingEnd="8dp"            android:paddingBottom="8dp" />    </LinearLayout></LinearLayout>