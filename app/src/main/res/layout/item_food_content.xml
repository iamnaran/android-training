<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="10dp"    android:background="@color/colorContainerBackground"    android:orientation="horizontal">    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="3"        android:orientation="vertical">        <TextView            android:id="@+id/food_name"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="Burger"            android:layout_gravity="center"            android:gravity="center"            android:padding="10dp"            />    </LinearLayout>    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_weight="1"        android:orientation="vertical">        <CheckBox            android:id="@+id/check_box"            android:layout_gravity="center"            android:gravity="center"            android:padding="10dp"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />    </LinearLayout></LinearLayout>